{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "EmojitDatabase": "Server=(localdb)\\MSSQLLocalDB;Database=EmojitServer;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5173"
    ],
    "AllowedMethods": [
      "GET",
      "POST",
      "OPTIONS"
    ],
    "AllowedHeaders": [
      "Content-Type",
      "Authorization",
      "X-Requested-With",
      "X-SignalR-User-Agent"
    ],
    "AllowCredentials": false
  },
  "GameDefaults": {
    "DefaultMode": "Tower",
    "DefaultMaxPlayers": 4,
    "DefaultMaxRounds": 10,
    "MinimumPlayers": 2,
    "MaximumPlayers": 8,
    "MinimumRounds": 1,
    "MaximumRounds": 30,
    "DesignOrder": 7,
    "ShuffleDeck": true
  },
  "RateLimiting": {
    "PermitLimit": 100,
    "WindowInSeconds": 60,
    "QueueLimit": 5,
    "QueueProcessingOrder": "OldestFirst"
  }
}
