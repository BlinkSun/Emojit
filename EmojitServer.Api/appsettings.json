{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "EmojitDatabase": "Server=localhost;Database=EmojitServer;User Id=emojit;Password=ChangeThisPassword!;TrustServerCertificate=True;"
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [
      "https://app.emojit.gg",
      "https://staging.emojit.gg",
      "http://localhost:5173"
    ],
    "AllowedMethods": [
      "GET",
      "POST",
      "OPTIONS"
    ],
    "AllowedHeaders": [
      "Content-Type",
      "Authorization",
      "X-Requested-With",
      "X-SignalR-User-Agent"
    ],
    "AllowCredentials": false
  },
  "GameDefaults": {
    "DefaultMode": "Tower",
    "DefaultMaxPlayers": 4,
    "DefaultMaxRounds": 10,
    "MinimumPlayers": 2,
    "MaximumPlayers": 8,
    "MinimumRounds": 1,
    "MaximumRounds": 30,
    "DesignOrder": 7,
    "ShuffleDeck": true
  },
  "RateLimiting": {
    "PermitLimit": 60,
    "WindowInSeconds": 60,
    "QueueLimit": 0,
    "QueueProcessingOrder": "OldestFirst"
  },
  "SignalRLimits": {
    "MaximumReceiveMessageSizeInBytes": 32768
  }
}
